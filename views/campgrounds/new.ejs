<% include ../partials/header %>

	<div class="row justify-content-center">
		<div class="col-md-12 text-center">
			<h1>Create a New Campground</h1>
		</div>
		<div class="col-xs-12 col-md-6 col-lg-4">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<label for="name">Name</label>
					<input class="form-control" type="text" name="name" id="name" placeholder="Algonquin Park">
				</div>
				<div class="form-group">
					<label for="image">Image URL</label>
					<input class="form-control" type="text" name="image" id="image" placeholder="ex. https://source.unsplash.com/y8Ngwq34_Ak" required>
				</div>
				<div class="form-group">
					<label for="cost">Cost</label>
					<input class="form-control" type="number" name="cost" id="cost" placeholder="cost" min="0.01" step="0.01" required>
				</div>
				<div class="form-group">
					<label for="location">Location</label>
					<input class="form-control" type="text" name="location" id="location" placeholder="Algonquin Park, ON">
				</div>
				<div class="form-group">
					<label for="description">Description</label>
					<input class="form-control" type="text" name="description" id="description" placeholder="Ontario's most beautiful campground.">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
	</div>



<% include ../partials/footer %>